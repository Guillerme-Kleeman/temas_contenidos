<div class="container">
<h1 class="m-3">Editar Tema</h1>
<%= form_with scope: @item, url: temas_actualizar_path, method: :PUT do |f| %>
 <%= f.hidden_field  :id %>  
 <p><label>Asignatura</label>
  <%= f.collection_select :asignatura_id, Asignatura.all, :ASIGN_ID, :ASIGN_NOMBRE, {}, { :class => 'form-control', :selected => @item.asignatura_id } %> 
 </p>
 <p>
 <label>Nombre</label> <br>
 <%= f.text_field :descripcion, :class => 'form-control' %>
 </p>
 <%= f.submit "Enviar", disable_with: 'Submiting...', :class => 'btn btn-primary' %>
<% end %>
</div>